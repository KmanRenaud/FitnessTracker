    <script>
        function weightConverter(valNum) {
            document.getElementById("outputKilograms").innerHTML= (valNum / 2.2046).toFixed(2);
        }
        function weightConverterRev(valNum) {
            document.getElementById("outputKilogramsRev").innerHTML = (valNum * 2.2046).toFixed(2);
        }
        function weightInConverter(valNum) {
            document.getElementById("outputInToCm").innerHTML = (valNum / 2.54).toFixed(2);
        }
        function weightInConverterRev(valNum) {
            document.getElementById("outputCmToInRev").innerHTML = (valNum * 2.54).toFixed(2);
        }
    </script>


